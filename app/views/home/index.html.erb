<h1>Feel My Lyrics</h1>

<table class="table">
	<thead>
		<tr>
			<th>User</th>
			<th>Post</th>
			<th>Lyrics</th>
			<th>Song</th>
			<th>Artist</th>
		</tr>
	</thead>
	<tbody>
		<% @posts.each do |c| %>
		<tr>
			<td><%= c.user.name %></td>
			<td><%= c.text %></td>
			<td><%= c.lyric %></td>
			<td><%= c.song.title %></td>
			<td><%= c.song.artist %></td>
			<td><%= c.comments.comment %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Destroy', destroy_user_session_path, method: :delete %> 