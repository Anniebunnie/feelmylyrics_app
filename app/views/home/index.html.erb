<h2>Lyrical Blogosphere</h2>
<div class='clear'></div>
		<% @posts.each do |p| %>
			<div class="post">
				<h3><%= p.user.name %></h3>
				<%= button_to "Delete Post", post_path(p.id), {method: :delete} %>
				<h2><%= p.text %></h2>
			<div class="song">
				<ul>
					<%= button_to "Delete Song", song_path(p.song.id), {method: :delete} %>
				<li><h4>TRACK: <%= p.song.title %></h4></li>
				<li><h4>ARTIST: <%= p.song.artist %></h4><li>
				</ul>
				<h1 class="italics">"<%= p.lyric %>"</h1>
				<img class="album" src="<%= p.song.photo %>" alt="Album Cover">
			</div>
			<div class="comments">
				<%= button_to "Delete Comment", comment_path(p.id), {method: :delete} %>
				<% p.comments.each do |comment| %>
				<p><%= p.comments.first.user.name if p.comments.first %> commented :  <%= p.comments.first.comment if p.comments.first %></p>
				<%= link_to 'Comment', new_comment_path(p), method: :get %> 
				<% end %>
			</div>
	<% if @user %>
			<div class= "new_comment">
				<form action="/posts/<%=p.id%>/comments" method="post">
					<textarea name="comment_text" id="" cols="79" rows="2"></textarea>
					<input type="submit">
				</form>
			</div>
		<% end %>
	</div>
<% end %>